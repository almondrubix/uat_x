<% @tweets.each do |tweet| %>

	<div class="card" style="width: 18rem;">
		<div class="card-body">
		<h5 class="card-title"><%= tweet.content %></h5>
		<h6 class="card-subtitle mb-2 text-body-secondary"><%= time_ago_in_words(tweet.created_at) %></h6>
			<%= link_to tweet.user.email,  profile_path(tweet.user) %>
		</div>
	</div>

	<br />

	
<% end %>